@{
    ViewData["Title"] = "Resumen Diario de Transacciones";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Resumen Diario de Transacciones</h1>

    <div class="d-flex justify-content-between mb-4">
        <button class="btn btn-primary" data-bs-toggle="collapse" href="#resumenTransacciones" role="button" aria-expanded="false" aria-controls="resumenTransacciones">
            Ver Resumen Diario
        </button>
        <button class="btn btn-success" data-bs-toggle="collapse" href="#exportarResumen" role="button" aria-expanded="false" aria-controls="exportarResumen">
            Exportar Consolidado
        </button>
    </div>

    <div class="collapse" id="resumenTransacciones">
        <h4 class="mb-3">Resumen de Transacciones del Día</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>ID Transacción</th>
                    <th>Método de Pago</th>
                    <th>Monto</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>2024-12-09</td>
                    <td>#1001</td>
                    <td>Tarjeta</td>
                    <td>₡2,500.00</td>
                    <td><span class="badge bg-success">Completado</span></td>
                </tr>
                <tr>
                    <td>2024-12-09</td>
                    <td>#1002</td>
                    <td>EFECTIVO</td>
                    <td>₡1,200.00</td>
                    <td><span class="badge bg-success">Completado</span></td>
                </tr>
                <tr>
                    <td>2024-12-09</td>
                    <td>#1003</td>
                    <td>SINPE Móvil</td>
                    <td>₡800.00</td>
                    <td><span class="badge bg-warning">Pendiente</span></td>
                </tr>
                <tr>
                    <td>2024-12-09</td>
                    <td>#1004</td>
                    <td>Tarjeta</td>
                    <td>₡5,000.00</td>
                    <td><span class="badge bg-success">Completado</span></td>
                </tr>
                <tr>
                    <td>2024-12-09</td>
                    <td>#1005</td>
                    <td>EFECTIVO</td>
                    <td>₡3,200.00</td>
                    <td><span class="badge bg-danger">Duplicado</span></td>
                </tr>
            </tbody>
        </table>

        <div class="alert alert-warning mt-4" role="alert">
            <strong>¡Advertencia!</strong> Existen transacciones pendientes de ser registradas. Verifique la transacción #1003.
        </div>
    </div>

    <div class="collapse" id="exportarResumen">
        <h4 class="mb-3">Exportar Consolidado Diario</h4>
        <p>Selecciona el formato en el que deseas exportar el consolidado del día:</p>
        <div class="d-flex justify-content-between">
            <button class="btn btn-info">Exportar a PDF</button>
            <button class="btn btn-info">Exportar a Excel</button>
        </div>
    </div>
</div>
