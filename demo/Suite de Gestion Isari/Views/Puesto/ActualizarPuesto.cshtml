@model Suite_de_Gestion_Isari.Entidades.Puestos
@{
    ViewData["Title"] = "Editar Puesto de Trabajo";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Editar Puesto de Trabajo</h1>
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="d-flex justify-content-center">
            <div class="alert alert-danger text-center w-50">
                @ViewBag.ErrorMessage
            </div>
        </div>
    }
    <form asp-action="ActualizarPuesto" asp-controller="Puesto">

        <input type="hidden" asp-for="ID_PUESTO" />

        <div class="mb-3">
            <label for="nombrePuesto" class="form-label">Nombre del Puesto</label>
            <input type="text" asp-for="NOMBRE_POSICION" class="form-control" required>
        </div>


        <div class="mb-3">
            <label for="nombrePuesto" class="form-label">Nombre del Puesto</label>
            <input type="text" asp-for="Descripcion" class="form-control" required>
        </div>


        <div class="mb-3">
            <label for="nombrePuesto" class="form-label">Nombre del Puesto</label>
            <input type="text" asp-for="Salario" class="form-control" required>
        </div>


        <div class="d-flex justify-content-between">
            <a class="btn btn-secondary" role="button" asp-controller="Puesto" asp-action="Index">Volver</a>
            <input type="submit" class="btn btn-primary" value="Actualizar">
        </div>
    </form>
</div>
