@model Suite_de_Gestion_Isari.Entidades.Empleado


@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Editar Usuario</h1>

    <form asp-action="Editar" asp-controller="Usuario">

        <input type="hidden" asp-for="ID_EMPLEADO" />

        <div class="mb-3">
            <label for="nombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="nombre" asp-for="NOMBRE" placeholder="Ingrese el nombre" required />
        </div>
        <div class="mb-3">
            <label for="cedula" class="form-label">Cédula</label>
            <input type="text" class="form-control" id="cedula" asp-for="CEDULA" placeholder="Ingrese la cédula" required />
        </div>

        <div class="mb-3">
            <label for="correo" class="form-label">Correo Electrónico</label>
            <input type="email" class="form-control" id="correo" asp-for="EMAIL" placeholder="Ingrese el correo" required />
        </div>

        <div class="mb-3">
            <label for="telefono" class="form-label">Teléfono</label>
            <input type="text" class="form-control" id="telefono" asp-for="TELEFONO" placeholder="Ingrese el teléfono" required />
        </div>

       

        <div class="mb-3">
            <label for="Roles" class="form-label">Rol</label>
            <select asp-for="ID_ROL" class="form-control" asp-items="@(new SelectList(ViewBag.Roles, "ID_ROL", "DESCRIPCION"))">
                <option value="">Seleccione un Rol</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="Puesto" class="form-label">Puesto</label>
            <select asp-for="ID_PUESTO" class="form-control" asp-items="@(new SelectList(ViewBag.Puestos, "ID_PUESTO", "NOMBRE_POSICION"))">
                <option value="">Seleccione un puesto</option>
            </select>
        </div>
     

        <div class="d-flex justify-content-between">
            <a class="btn btn-secondary" role="button" asp-controller="Usuario" asp-action="ConsultarEmpleados">Volver</a>
            <input type="submit" class="btn btn-primary" value="Actualizar">
        </div>
    </form>
</div>
