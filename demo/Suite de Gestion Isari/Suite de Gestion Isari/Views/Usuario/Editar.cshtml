@model Suite_de_Gestion_Isari.Entidades.Empleado

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded">
                <div class="card-header  bg-success text-white text-center">
                    <h1 class="display-6 mb-0">Editar Usuario</h1>
                </div>
                <div class="card-body">
                    <form asp-action="Editar" asp-controller="Usuario">
                        <input type="hidden" asp-for="ID_EMPLEADO" />

                        <div class="mb-3">
                            <label asp-for="NOMBRE" class="form-label fw-bold">Nombre</label>
                            <input type="text" class="form-control" asp-for="NOMBRE" placeholder="Ingrese el nombre" required />
                            <span asp-validation-for="NOMBRE" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CEDULA" class="form-label fw-bold">Cédula</label>
                            <input type="text" class="form-control" asp-for="CEDULA" placeholder="Ingrese la cédula" required />
                            <span asp-validation-for="CEDULA" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EMAIL" class="form-label fw-bold">Correo Electrónico</label>
                            <input type="email" class="form-control" asp-for="EMAIL" placeholder="Ingrese el correo" required />
                            <span asp-validation-for="EMAIL" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TELEFONO" class="form-label fw-bold">Teléfono</label>
                            <input type="text" class="form-control" asp-for="TELEFONO" placeholder="Ingrese el teléfono" required />
                            <span asp-validation-for="TELEFONO" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ID_ROL" class="form-label fw-bold">Rol</label>
                            <select asp-for="ID_ROL" class="form-control" asp-items="@(new SelectList(ViewBag.Roles, "ID_ROL", "DESCRIPCION"))">
                                <option value="">Seleccione un Rol</option>
                            </select>
                            <span asp-validation-for="ID_ROL" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ID_PUESTO" class="form-label fw-bold">Puesto</label>
                            <select asp-for="ID_PUESTO" class="form-control" asp-items="@(new SelectList(ViewBag.Puestos, "ID_PUESTO", "NOMBRE_POSICION"))">
                                <option value="">Seleccione un Puesto</option>
                            </select>
                            <span asp-validation-for="ID_PUESTO" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ESTADO" class="form-label fw-bold">Estado</label>
                            <select class="form-control" asp-for="ESTADO">
                                <option value="true" selected="@(Model.ESTADO ? "selected" : null)">Activo</option>
                                <option value="false" selected="@(Model.ESTADO ? null : "selected")">Inactivo</option>
                            </select>
                            <span asp-validation-for="ESTADO" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a class="btn btn-secondary" role="button" asp-controller="Usuario" asp-action="ConsultarEmpleados">Volver</a>
                            <button type="submit" class="btn btn-primary">Actualizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
