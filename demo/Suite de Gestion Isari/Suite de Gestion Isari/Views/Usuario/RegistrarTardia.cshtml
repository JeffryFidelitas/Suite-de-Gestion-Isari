@{
    ViewData["Title"] = "Solicitar Vacaciones";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Registrar Tardia</h1>

    <form>
        
        <div class="mb-3">
            <label for="empleado" class="form-label">Empleado</label>
            <input type="text" class="form-control" id="empleado" value="Juan" placeholder="Ingrese empleado" required>
        </div>

        <div class="mb-3">
            <label for="horaLlegada" class="form-label">Hora llegada</label>
            <input type="time" class="form-control" id="horallegada" required>
        </div>

        <div class="d-flex justify-content-between">
            <a class="btn btn-secondary" role="button" asp-controller="Usuario" asp-action="Index">Volver</a>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </form>
</div>
