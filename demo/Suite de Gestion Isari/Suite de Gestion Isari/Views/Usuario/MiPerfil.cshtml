@model Suite_de_Gestion_Isari.Entidades.Empleado
@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Mi Perfil</h1>

    @if (ViewBag.ErrorMessage != null)

    {
        <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
    }

    else

    {
        <div class="card shadow-lg">
            <div class="card-body">
                <div class="text-center mb-4">
                    <h5 class="card-title text-primary">@Model.NOMBRE</h5>
                    <p class="text-muted">@Model.NOMBRE_POSICION</p>
                </div>

                <hr>

                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Cédula:</strong> @Model.CEDULA</p>
                        <p><strong>Correo Electrónico:</strong> @Model.EMAIL</p>
                        <p><strong>Teléfono:</strong> @Model.TELEFONO</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Fecha de Nacimiento:</strong> @(Model.FECHA_CONTRATACION?.ToString() ?? "Fecha no disponible")</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="mt-4 text-center">
        <a class="btn btn-primary btn-lg" asp-controller="Usuario" asp-action="ActualizarPerfil">Actualizar Información</a>
        <a class="btn btn-secondary btn-lg" asp-controller="Home" asp-action="Index">Volver al Inicio</a>
    </div>
</div>

<div class="text-center mt-5">
    <p class="text-muted">© 2025 Suite de Gestión Isari. Todos los derechos reservados.</p>
</div>

