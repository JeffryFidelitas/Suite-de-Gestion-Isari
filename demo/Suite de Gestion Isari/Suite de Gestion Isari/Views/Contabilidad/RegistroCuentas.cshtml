@{
    ViewData["Title"] = "Registro de Cuentas por Cobrar y por Pagar";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Registro de Cuentas por Cobrar y por Pagar</h1>

    <div class="d-flex justify-content-between mb-4">
        <button class="btn btn-primary" data-bs-toggle="collapse" href="#cuentasCobrar" role="button" aria-expanded="false" aria-controls="cuentasCobrar">
            Cuentas por Cobrar
        </button>
        <button class="btn btn-primary" data-bs-toggle="collapse" href="#cuentasPagar" role="button" aria-expanded="false" aria-controls="cuentasPagar">
            Cuentas por Pagar
        </button>
    </div>

    <!-- Sección de Cuentas por Cobrar -->
    <div class="collapse" id="cuentasCobrar">
        <h4 class="mb-3">Registrar Cuenta por Cobrar</h4>
        <form>
            <!-- Datos de la Venta a Crédito -->
            <div class="mb-3">
                <label for="cliente" class="form-label">Cliente</label>
                <input type="text" class="form-control" id="cliente" placeholder="Nombre del cliente" required>
            </div>

            <div class="mb-3">
                <label for="monto" class="form-label">Monto</label>
                <input type="number" class="form-control" id="monto" placeholder="Monto de la venta" required>
            </div>

            <div class="mb-3">
                <label for="fechaVencimiento" class="form-label">Fecha de Vencimiento</label>
                <input type="date" class="form-control" id="fechaVencimiento" required>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Registrar Cuenta por Cobrar</button>
                <button type="reset" class="btn btn-secondary">Limpiar</button>
            </div>
        </form>

        <hr>

        <h4 class="mb-3">Cuentas por Cobrar Pendientes</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Cliente</th>
                    <th>Monto</th>
                    <th>Fecha de Vencimiento</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Cliente A</td>
                    <td>₡2,500.00</td>
                    <td>2024-12-15</td>
                    <td><span class="badge bg-warning">Pendiente</span></td>
                </tr>
                <tr>
                    <td>Cliente B</td>
                    <td>₡3,000.00</td>
                    <td>2024-12-10</td>
                    <td><span class="badge bg-danger">Vencido</span></td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Sección de Cuentas por Pagar -->
    <div class="collapse" id="cuentasPagar">
        <h4 class="mb-3">Registrar Cuenta por Pagar</h4>
        <form>
            <!-- Datos de la Compra a Crédito -->
            <div class="mb-3">
                <label for="proveedor" class="form-label">Proveedor</label>
                <input type="text" class="form-control" id="proveedor" placeholder="Nombre del proveedor" required>
            </div>

            <div class="mb-3">
                <label for="montoPagar" class="form-label">Monto</label>
                <input type="number" class="form-control" id="montoPagar" placeholder="Monto de la compra" required>
            </div>

            <div class="mb-3">
                <label for="fechaVencimientoPagar" class="form-label">Fecha de Vencimiento</label>
                <input type="date" class="form-control" id="fechaVencimientoPagar" required>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Registrar Cuenta por Pagar</button>
                <button type="reset" class="btn btn-secondary">Limpiar</button>
            </div>
        </form>

        <hr>

        <h4 class="mb-3">Cuentas por Pagar Pendientes</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Proveedor</th>
                    <th>Monto</th>
                    <th>Fecha de Vencimiento</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Proveedor A</td>
                    <td>₡5,000.00</td>
                    <td>2024-12-12</td>
                    <td><span class="badge bg-warning">Pendiente</span></td>
                </tr>
                <tr>
                    <td>Proveedor B</td>
                    <td>₡2,000.00</td>
                    <td>2024-12-08</td>
                    <td><span class="badge bg-danger">Vencido</span></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
