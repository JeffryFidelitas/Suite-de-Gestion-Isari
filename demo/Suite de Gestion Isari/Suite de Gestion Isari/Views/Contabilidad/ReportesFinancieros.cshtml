@{
    ViewData["Title"] = "Generar Reportes Financieros";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Generar Reportes Financieros</h1>

    <form>
        <div class="mb-3">
            <label for="periodo" class="form-label">Seleccionar Periodo</label>
            <select class="form-select" id="periodo" required>
                <option value="diario">Diario</option>
                <option value="semanal">Semanal</option>
                <option value="mensual">Mensual</option>
            </select>
        </div>

        <div class="mb-3" id="mesAnio" style="display: none;">
            <label for="mes" class="form-label">Mes y Año</label>
            <div class="d-flex">
                <select class="form-select me-2" id="mes">
                    <option value="enero">Enero</option>
                    <option value="febrero">Febrero</option>
                    <option value="marzo">Marzo</option>
                    <option value="abril">Abril</option>
                </select>
                <input type="number" class="form-control" id="anio" placeholder="Año" required>
            </div>
        </div>

        <div class="mb-3">
            <label for="categoria" class="form-label">Seleccionar Categoría</label>
            <select class="form-select" id="categoria" required>
                <option value="ingresos">Ingresos</option>
                <option value="egresos">Egresos</option>
                <option value="ambos">Ambos</option>
            </select>
        </div>

        <div class="d-flex justify-content-between">
            <a class="btn btn-secondary" role="button" asp-controller="Contabilidad" asp-action="ConsultaReportes">Cancelar</a>
            <button type="submit" class="btn btn-primary">Generar Reporte</button>
        </div>

        <hr>

        <div class="d-flex justify-content-between mt-4">
            <label for="exportar" class="form-label">Exportar Reporte:</label>
            <select class="form-select w-25" id="exportar">
                <option value="pdf">PDF</option>
                <option value="excel">Excel</option>
            </select>
            <button type="button" class="btn btn-success">Exportar</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById("periodo").addEventListener("change", function () {
            var periodo = this.value;
            var mesAnioDiv = document.getElementById("mesAnio");
            if (periodo === "mensual") {
                mesAnioDiv.style.display = "block";
            } else {
                mesAnioDiv.style.display = "none";
            }
        });
    </script>
}
