@model Suite_de_Gestion_Isari.Entidades.Cuenta
@{
    ViewData["Title"] = "Registro de Cuentas por Cobrar y por Pagar";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Registro de Cuentas por Cobrar y por Pagar</h1>

    <form asp-action="RegistroCuenta" method="post">
        <div class="form-group mb-3">
            <label asp-for="INDIVIDUO"></label>
            <input asp-for="INDIVIDUO" class="form-control" />
            <span asp-validation-for="INDIVIDUO" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="DESCRIPCION"></label>
            <input asp-for="DESCRIPCION" class="form-control" />
            <span asp-validation-for="DESCRIPCION" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="DINERO"></label>
            <input type="number" asp-for="DINERO" class="form-control" />
            <span asp-validation-for="DINERO" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="VENCIMIENTO"></label>
            <input type="date" asp-for="VENCIMIENTO" class="form-control" />
            <span asp-validation-for="VENCIMIENTO" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="ESTADO"></label>
            <select asp-for="ESTADO" class="form-control">
                <option value="0">Por Pagar</option>
                <option value="1">Por Cobrar</option>
            </select>
            <span asp-validation-for="ESTADO" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
</div>
