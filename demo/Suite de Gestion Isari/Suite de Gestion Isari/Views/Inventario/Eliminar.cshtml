@model Suite_de_Gestion_Isari.Entidades.Productos
@{
    ViewData["Title"] = "Eliminar Item";
}

<div>
    <h1 class="display-4 text-center mb-4">Eliminar Item</h1>
    <div class="alert alert-danger" role="alert">
        ¿Estás seguro de que quieres borrar este item?
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Unidades</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">@Model.ID_PRODUCTO</th>
                <td>@Model.NOMBRE</td>
                <td>@Model.PRECIO</td>
                <td>@Model.CANTIDAD_DISPONIBLE</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-between">
        <a class="btn btn-secondary" role="button" asp-controller="Inventario" asp-action="Index">Volver</a>
        @using (Html.BeginForm("EliminarConfirmar", "Inventario", FormMethod.Post, new { @class = "form" }))
        {
            @Html.HiddenFor(model => model.ID_PRODUCTO)
            <button type="submit" class="btn btn-danger">Eliminar</button>
        }
    </div>
</div>
