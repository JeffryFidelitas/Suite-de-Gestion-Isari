@model Suite_de_Gestion_Isari.Entidades.Productos
@{
    ViewData["Title"] = "Agregar Producto";
    var categorias = ViewData["categorias"] as List<Suite_de_Gestion_Isari.Entidades.Categorias>;
}

<div class="container-fluid mt-auto">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-10">
            <div class="shadow rounded bg-light p-5">
                <h1 class="display-4 text-center mb-5">Agregar Producto</h1>

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
                }

                <form asp-action="Agregar" method="post">
                    <div class="mb-4">
                        <label asp-for="CODIGO_PRODUCTO" class="form-label fw-bold fs-5">Código del Producto</label>
                        <input asp-for="CODIGO_PRODUCTO" class="form-control form-control-lg" placeholder="Ingrese el código del producto" required />
                        <span asp-validation-for="CODIGO_PRODUCTO" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="NOMBRE" class="form-label fw-bold fs-5">Nombre</label>
                        <input asp-for="NOMBRE" class="form-control form-control-lg" placeholder="Ingrese el nombre del producto" required />
                        <span asp-validation-for="NOMBRE" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="DESCRIPCION" class="form-label fw-bold fs-5">Descripción</label>
                        <textarea asp-for="DESCRIPCION" class="form-control form-control-lg" placeholder="Ingrese una descripción del producto" rows="3" required></textarea>
                        <span asp-validation-for="DESCRIPCION" class="text-danger"></span>
                    </div>

                    <div class="row mb-4">
                        <div class="col-lg-6">
                            <label asp-for="PROVEEDOR" class="form-label fw-bold fs-5">Proveedor</label>
                            <input asp-for="PROVEEDOR" class="form-control form-control-lg" placeholder="Ingrese el proveedor" required />
                            <span asp-validation-for="PROVEEDOR" class="text-danger"></span>
                        </div>

                        <div class="col-lg-6">
                            <label asp-for="PRECIO" class="form-label fw-bold fs-5">Precio</label>
                            <input asp-for="PRECIO" class="form-control form-control-lg" placeholder="Precio del producto" type="number" min="0" step="0.01" required />
                            <span asp-validation-for="PRECIO" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-lg-6">
                            <label asp-for="ID_CATEGORIA" class="form-label fw-bold fs-5">Categoría</label>
                            <select asp-for="ID_CATEGORIA" class="form-select form-control-lg" required>
                                <option value="">Seleccione una categoría</option>
                                @if (categorias != null && categorias.Count > 0)
                                {
                                    @foreach (var categoria in categorias)
                                    {
                                        <option value="@categoria.ID_CATEGORIA">@categoria.DESCRIPCION</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="ID_CATEGORIA" class="text-danger"></span>
                        </div>

                        <div class="col-lg-6">
                            <label asp-for="CANTIDAD_DISPONIBLE" class="form-label fw-bold fs-5">Cantidad Disponible</label>
                            <input asp-for="CANTIDAD_DISPONIBLE" class="form-control form-control-lg" placeholder="Cantidad disponible" type="number" min="0" required />
                            <span asp-validation-for="CANTIDAD_DISPONIBLE" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a class="btn btn-secondary btn-lg px-5" role="button" asp-controller="Home" asp-action="Index">Volver</a>
                        <button type="submit" class="btn btn-primary btn-lg px-5">Guardar Producto</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
