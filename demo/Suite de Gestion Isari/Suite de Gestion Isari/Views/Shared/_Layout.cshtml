<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Suite de Gestión Isari</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Suite_de_Gestion_Isari.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/2.1.3/css/dataTables.bootstrap4.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <style>


  

        /* Resaltar el botón principal del dropdown al pasar el mouse */
        .nav-item .nav-link.dropdown-toggle:hover {
            background-color: #adb5bd; /* Fondo ligeramente más oscuro */
            color: #343a40; /* Cambia el color del texto */
            border-radius: 5px; /* Opcional: Bordes redondeados */
        }
        /* Aumentar el tamaño de letra de las opciones del dropdown */
        .dropdown-item {
            font-size: 1.2rem; /* Ajusta el tamaño según tus necesidades */
            padding: 10px 15px; /* Opcional: Añade más espacio */
        }

            /* Cambiar el color y fondo al pasar el mouse */
            .dropdown-item:hover {
                background-color: #28a745; /* Color de fondo verde (puedes elegir otro tono) */
                color: #ffffff; /* Texto blanco para contraste */
                border-radius: 5px; /* Opcional: Bordes redondeados para hover */
            }
        body {
            background-color: #f8f9fa; 
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        footer {
            margin-top: auto;
            text-align: center;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/logo.png"><span>Suite de Gestión Isari</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (@Context.Session.GetString("IdRol") == "2")
                        {

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="dropdownInventario" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Inventario
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownInventario">
                                    <a class="dropdown-item" asp-area="" asp-controller="Inventario" asp-action="Index">Lista Inventario</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Inventario" asp-action="Agregar">Agregar Producto</a>
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="dropdownAdmin" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Administracion
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownAdmin">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Puesto" asp-action="ConsultarPosiciones">Puestos laborales</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Puesto" asp-action="Agregar">Agregar Puesto laboral</a></li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="dropdownContabilidad" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Contabilidad
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownContabilidad">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Contabilidad" asp-action="ReportesFinancieros">Reportes Financieros</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Contabilidad" asp-action="ConsultarCuentas">Consulta de Cuentas</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Contabilidad" asp-action="RegistroCuenta">Registro de Cuenta</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Contabilidad" asp-action="ResumenDiario">Resumen Diario</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Contabilidad" asp-action="Caja">Caja</a></li>
                                </ul>
                            </li>


                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="dropdownCat" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Categoria Productos
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownCat">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Categoria" asp-action="Index">Lista Categorias</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Categoria" asp-action="Agregar">Agregar Categoria</a></li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="dropdownUsuario" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Usuarios
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownUsuario">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Usuario" asp-action="Agregar_Empleado">Agregar Usuario</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Usuario" asp-action="ConsultarEmpleados">Lista Usuarios</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Usuario" asp-action="RegistrarTardia">Registrar Horario</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Usuario" asp-action="VerHorarios">Ver Horarios</a></li>                              
                                </ul>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Reporteria" asp-action="Index">Reporteria</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Datos" asp-action="ConsultarDatos">DASHBOARD</a>
                            </li>

                        }

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdownUsuario" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Vacaciones
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="dropdownUsuario">
                                
                                <li><a class="dropdown-item" asp-area="" asp-controller="Usuario" asp-action="VerSolicitudesVacaciones">Solicitudes Realizadas</a></li>
                                
                            </ul>
                        </li>


                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdownPuntoVenta" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Punto de Venta
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="dropdownPuntoVenta">                               
                                <li><a class="dropdown-item" asp-area="" asp-controller="PuntoVenta" asp-action="RegistroVenta">Registrar Venta</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="PuntoVenta" asp-action="RegistroDevolucion">Registro de Devolución</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="PuntoVenta" asp-action="ConsultaDevoluciones">Consulta de Devoluciones</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="PuntoVenta" asp-action="HistorialVentas">Historial de Ventas</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="PuntoVenta" asp-action="HistorialVentaDia">Ventas del día</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="PuntoVenta" asp-action="HistorialVentaDiaAdmin">Ventas del día ADMIN</a></li>
                                
                            </ul>
                        </li>

                        <ul class="navbar-nav ms-auto">

                            @if (Context.Session.GetString("UsuarioNombre") != null)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="dropdownUsuario" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Bienvenido, @Context.Session.GetString("UsuarioNombre")
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownUsuario">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Usuario" asp-action="ActualizarPerfil">Actualizar Perfil</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Usuario" asp-action="CambioContraseña">Cambio de contraseña</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Usuario" asp-action="SolicitarVacaciones">Solicitar Vacaciones</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Usuario" asp-action="VerSolicitudesVacacionesUsuario">Solicitudes de Vacaciones</a></li>
                                        <li><a class="dropdown-item" asp-controller="Login" asp-action="CerrarSesion">Cerrar Sesión</a></li>

                                    </ul>
                                </li>
                            }



                        </ul>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

@*     <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Suite de Gestión Isari
        </div>
    </footer> *@

    <footer class="border-top footer text-muted text-center mt-auto">
        <div class="container">
            &copy; 2025 - Suite de Gestión Isari
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src=https://cdn.datatables.net/2.1.3/js/dataTables.js></script>
    <script src=https://cdn.datatables.net/2.1.3/js/dataTables.bootstrap4.js></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


