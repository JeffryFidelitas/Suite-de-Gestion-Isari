@model List<Suite_de_Gestion_Isari.Entidades.Venta>

@{
    ViewData["Title"] = "Detalle Factura";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Factura # @Model.FirstOrDefault()!.Consecutivo</h5>

        @if (ViewBag.Mensaje != null)
        {
            <div class="alert alert-secondary text-center">@ViewBag.Mensaje</div>
        }

        <div class="table-responsive">
            <table id="tablaDetalleFactura" class="table table-striped tabla-estilo">
                <thead>
                    <tr class="border-2 border-bottom border-primary border-0">
                        <th>Producto</th>
                        <th>Precio</th>
                        <th>Cantidad</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>¢ @item.Precio.ToString("N2")</td>
                            <td>@item.Unidades</td>
                            <td>¢ @item.Total.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Botón de Regresar -->
        <div class="mt-3">
            <a href="@Url.Action("HistorialVentas", "PuntoVenta")" class="btn btn-secondary">
                Regresar
            </a>
        </div>

    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $("#tablaDetalleFactura").DataTable({
            language: {
                url:'//cdn.datatables.net/plug-ins/2.0.2/i18n/es-ES.json'
            },columnDefs: [
                { targets: [0, 1, 2, 3], type: "string" }
            ]
        });
    })
</script>

