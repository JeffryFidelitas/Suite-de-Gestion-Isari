@model Suite_de_Gestion_Isari.Entidades.Categorias
@{
    ViewData["Title"] = "Eliminar Categoria";
}

<div>
    <h1 class="display-4 text-center mb-4">Eliminar Categoria</h1>
    <div class="alert alert-danger" role="alert">
        ¿Estás seguro de que quieres borrar esta categoria y <b>todos los productos asignados a esta</b>?
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">@Model.ID_CATEGORIA</th>
                <td>@Model.DESCRIPCION</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-between">
        <a class="btn btn-secondary" role="button" asp-controller="Categoria" asp-action="Index">Volver</a>
        @using (Html.BeginForm("EliminarConfirmar", "Categoria", FormMethod.Post, new { @class = "form" }))
        {
            @Html.HiddenFor(model => model.ID_CATEGORIA)
            <button type="submit" class="btn btn-danger">Eliminar</button>
        }
    </div>
</div>
